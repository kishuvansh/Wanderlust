<% layout('layouts/boilerplate.ejs') -%>
<body>
<div class="row ">
    <h3>Listing Details: </h3>
    
        <div class="card">
          <% const imgUrl = listing && listing.image && (listing.image.url || listing.image); %>
    <img src="<%= imgUrl || '/images/default.jpg' %>" class="card-img-top "style ="height:20rem" alt="listing image" >
    <div class="card-body">
        <p class="card-text"> <%=listing.title %></p>
    </div>
</div>

        <ul>
        <li><%= listing.description%></li>
       
       <li>  <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> </li>
        <li><%= listing.location%></li>
        <li><%= listing.country%></li>
      </ul>
       <br>
       <a href="/listings/<%=listing._id %>/edit">Edit this listing </a>
       <br><br>

    <div class="row ">
<div class="col-md-4">
        <form action="/listings/<%=listing._id %>?_method=DELETE" method="post">
            <button  class="btn btn-dark mb-3" >
                DELETE 
            </button>
        </form>
</div>
<div class=" col-md-8">
        <form action="/listings" method="get">
            <button class="btn btn-dark mb-3" >Back</button>
        </form>
        <!-- </inline-block> -->
    
    </div>
</div>
</div>