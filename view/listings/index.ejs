<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <h1>ALL LISTINGS </h1>
<ol>
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
     <%for(let listing of allListings){ %>

      <a href="/listings/<%=listing._id %>" class="listing-link">
   <div class="card col " style="width: 18rem;">
  <% const imgUrl = listing && listing.image && (listing.image.url || listing.image); %>
    <img src="<%= imgUrl || '/images/default.jpg' %>" 
        class="card-img-top " 
        style="height:20rem" 
        alt="listing image">
        <div class="card-img-overlay">image</div>
    <div class="card-body">
      <h5 class="card-title"><b><%= listing.title %></b></h5>
        <br>
          &#8377    <%=listing.price.toLocaleString("en-IN") %> /neight
                            
        </p>
     
      <!--  -->
    </div>
  </div>
  </a>
<%}%>
   </div>


</ol>
</body>

